<xml>

	<append xpath="/buffs">

		<buff name="buffFrostyPunch">
			<effect_group>
				<requirement name="IsPrimary"/>
				<triggered_effect trigger="onSelfAttackedOther" action="_28AL.ParticleSystems.Attach,ParticleSystems" target="other" particle="#@modfolder:Assets/28al_ps_frosty.unity3d?PS_Frosty_Prefab" shape_to_mesh="true"/>
			</effect_group>

			<effect_group>
				<requirement name="IsSecondary"/>
