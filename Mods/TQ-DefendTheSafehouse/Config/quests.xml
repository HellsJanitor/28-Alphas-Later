				<property name="phase" value="2"/>
				<property name="nav_object" value="rally"/>
			</objective>
			<objective type="Time" time="4" value="300" phase="3">
		</objective>
			<!--- 300 seconds (5 mins) real time to clear (optional) and setup  -->
			<objective type="POIStayWithin">
				<property name="phase" value="3"/>
				<property name="radius" value="25"/>
			</objective>
			<!-- adding fetch only to see if this forces poi reset for multiplayer -->
			<objective type="FetchFromContainer">
				<property name="phase" value="3"/>
				<property name="quest_item_ID" value="1"/>
				<property name="item_count" value="1"/>
